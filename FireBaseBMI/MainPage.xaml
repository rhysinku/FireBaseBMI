<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FireBaseBMI.MainPage">

    <StackLayout Margin=" 30,50,30,0">
        
        <Label Text="Rhysin Villahermosa and Mark Neo Mamalias" FontSize="20" HorizontalOptions="Center" />
        <StackLayout Margin="10,20,10,0">
            <Entry x:Name="Name" Placeholder="Name"/>
            <Entry x:Name="Weight" Placeholder="Weight"/>
            <Entry x:Name="Height" Placeholder="Height"/>
        </StackLayout>
        
        <StackLayout HorizontalOptions="CenterAndExpand">
            <Button Text="Add" Clicked="addClicked" CornerRadius="20"/> 
        </StackLayout>

    </StackLayout>
</ContentPage>
